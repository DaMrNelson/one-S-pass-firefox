{
    "manifest_version": 2,
    "name": "One Dollar Pass",
    "version": "1.0",
    "description": "Manage your passwords using One Dollar Pass!",

    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "webRequest",
        "*://api.nschramm.com/*",
        "*://127.0.0.1/*"
    ],

    "browser_action": {
        "default_icon": {
            "16": "imgs/icon-16.png",
            "32": "imgs/icon-32.png"
        },
        "default_popup": "popup/home.html"
    },

    "background": {
        "scripts": ["bower_components/sjcl/sjcl.js", "communicator.js"]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": []
        }
    ]
}