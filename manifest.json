{
    "manifest_version": 2,
    "name": "One Dollar Pass",
    "version": "1.0",
    "description": "Manage your passwords using One Dollar Pass!",

    "permissions": [
        "activeTab",
        "storage"
    ],

    "browser_action": {
        "default_icon": {
            "16": "imgs/icon-16.png",
            "32": "imgs/icon-32.png"
        },
        "default_popup": "popup/home.html"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://*.mozilla.org/*"],
            "js": ["autoloader.js"]
        }
    ]
}